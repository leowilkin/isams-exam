{
  "name": "isams-exam-viewer",
  "version": "0.2.0-beta",
  "description": "iSAMS Exam Schedule Viewer",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "build": "electron-builder --publish never",
    "build:win": "electron-builder --win --publish never",
    "build:msi": "electron-builder --win msi --publish never",
    "build:all": "electron-builder -mw --publish never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leowilkin/isams-exam.git"
  },
  "keywords": [],
  "author": "Leo Wilkin",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "browser": {
    "fs": false,
    "path": false
  },
  "bugs": {
    "url": "https://github.com/leowilkin/isams-exam/issues"
  },
  "homepage": "https://github.com/leowilkin/isams-exam#readme",
  "build": {
    "appId": "xyz.wilkin.isams-exam-viewer",
    "productName": "iSAMS Exam Viewer",
    "asarUnpack": ["**/*.node"],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/favicon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "executableName": "isams-exam-viewer",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/favicon.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "iSAMS Exam Viewer",
      "menuCategory": "iSAMS Tools"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "shortcutName": "iSAMS Exam Viewer",
      "menuCategory": "iSAMS Tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "publish": {
      "provider": "github",
      "owner": "leowilkin",
      "repo": "isams-exam"
    }
  },
  "devDependencies": {
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "electronConfig": {
    "nodeIntegration": true,
    "contextIsolation": true,
    "enableRemoteModule": false,
    "nodeIntegrationInWorker": false,
    "nodeIntegrationInSubFrames": false,
    "sandbox": false,
    "webSecurity": true,
    "additionalArgs": [
      "--no-experimental-fetch"
    ]
  }
}
